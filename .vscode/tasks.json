{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup macos-homebrew",
      "type": "shell",
      // "command": "CC=clang CXX=clang++ meson setup build --buildtype=debug --prefix=/opt/homebrew --reconfigure",
      "command": "zsh build.sh config",
      "options": {
        "cwd": "${workspaceFolder}/macos-homebrew"
      },
      "problemMatcher": [
        "$meson-gcc"
      ]
    },
    {
      "label": "Build macos-homebrew",
      "type": "shell",
      // "command": "ninja -C build",
      "command": "zsh build.sh build",
      "options": {
        "cwd": "${workspaceFolder}/macos-homebrew"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Setup windows-cygwin",
      "type": "shell",
      "command": "meson setup build --buildtype=debug --prefix=/usr/local --reconfigure",
      "options": {
        "cwd": "${workspaceFolder}/windows-cygwin"
      }
    },
    {
      "label": "Build windows-cygwin",
      "type": "shell",
      "command": "ninja -C build",
      "options": {
        "cwd": "${workspaceFolder}/windows-cygwin"
      },
      "group": "build"
    }
  ]
}
