{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug macos-homebrew",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/macos-homebrew/build/your_binary",
      "cwd": "${workspaceFolder}/macos-homebrew",
